<!DOCTYPE html>
<html>
<head>
  <title>CloudSounds</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'audiojs/audio.min.js' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.png' %>
  <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/wavesurfer.js/1.1.12/wavesurfer.min.js"></script>
</head>
<body>
  <script type="text/javascript">
  $(function() {
    // Setup the audio player
    window.audiojs = audiojs;

    //Setup wavesurfer
    window.Wavesurfer = WaveSurfer;

  });
  </script>

<%= yield %>

</body>
</html>
